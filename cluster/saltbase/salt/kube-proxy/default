{% set daemon_args = "$DAEMON_ARGS" -%}
{% if grains['os_family'] == 'RedHat' -%}
	{% set daemon_args = "" -%}
{% endif -%}
{% if grains.api_servers is defined -%}
  {% set api_servers = "--master=http://" + grains.api_servers + ":7080" -%}
{% else -%}
  {% set ips = salt['mine.get']('roles:kubernetes-master', 'network.ip_addrs', 'grain').values() -%}
  {% set api_servers = "--master=http://" + ips[0][0] + ":7080" -%}
{% endif -%}
{% if grains.containers_cidr is defined -%}
  {% set containers_cidr = "--containers_cidr=" + grains.containers_cidr -%}
{% else -%}
  {% set containers_cidr = "" -%}
{% endif -%}

DAEMON_ARGS="{{daemon_args}} {{api_servers}} {{containers_cidr}} {{pillar['log_level']}}"
